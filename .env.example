# ============================================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your production values
# NEVER commit .env file to version control!
# Add .env to .gitignore

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_URL=jdbc:mysql://your-production-db-host:3306/matrimony?useSSL=true&requireSSL=true
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate using: openssl rand -base64 64
# CRITICAL: Use different secret for each environment (dev/staging/prod)
JWT_SECRET=REPLACE_WITH_YOUR_GENERATED_512_BIT_SECRET

# ============================================
# ENCRYPTION CONFIGURATION
# ============================================
# Generate using: openssl rand -base64 32
# CRITICAL: Keep these keys secure and backed up!
ENCRYPTION_SECRET_KEY=REPLACE_WITH_YOUR_GENERATED_256_BIT_KEY

# Legacy keys for decrypting old data (comma-separated)
# Add old keys here when rotating encryption keys
ENCRYPTION_LEGACY_KEYS=old_key_1,old_key_2,old_key_3

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Frontend URL for CORS and password reset links
FRONTEND_URL=https://your-production-domain.com

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Enable device fingerprinting (recommended: true)
JWT_DEVICE_FINGERPRINTING_ENABLED=true

# Enforce single session (recommended: true for production)
JWT_ENFORCE_SINGLE_SESSION=true

# Maximum concurrent sessions per user
JWT_MAX_ACTIVE_SESSIONS=3

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_PERIOD=100
RATE_LIMIT_REFRESH_PERIOD=60

# ============================================
# SSL/TLS CONFIGURATION
# ============================================
# If application handles SSL directly (not recommended - use reverse proxy)
SSL_ENABLED=false
SSL_KEY_STORE_PATH=/path/to/keystore.p12
SSL_KEY_STORE_PASSWORD=your_keystore_password
SSL_KEY_ALIAS=your_key_alias

# ============================================
# MONITORING & LOGGING
# ============================================
# Log level (INFO for production, DEBUG for troubleshooting)
LOG_LEVEL=INFO

# ============================================
# NOTES
# ============================================
# 1. Generate strong secrets using OpenSSL:
#    - JWT Secret: openssl rand -base64 64
#    - Encryption Key: openssl rand -base64 32
#
# 2. Store this file securely:
#    - Use password manager for team access
#    - Use secrets management service (AWS Secrets Manager, HashiCorp Vault)
#    - Restrict file permissions: chmod 600 .env
#
# 3. Rotate secrets regularly:
#    - JWT Secret: Every 90 days
#    - Encryption Keys: Every 180 days
#    - Database Password: Every 180 days
#
# 4. Backup encryption keys:
#    - Store in secure offline location
#    - Document key rotation history
#    - Test recovery procedure
#
# 5. Never:
#    - Commit this file to version control
#    - Share secrets via email or chat
#    - Use same secrets across environments
#    - Log secret values
